<div class="container">
  <div class="row">
    <div class="col-4 mx-auto">
      <h3 class="border-bottom border-warning border-2 mb-5 pb-4 d-flex justify-content-center">検索条件保存</h3>
      <%= form_with model: @search_parameter_saves do |f| %>
        <div class="field mb-5">
          <%= f.label :search_name, "保存名", class: "form-label" %><span class="text-danger"> *必須</span>
          <%= f.text_field :search_name, class: "form-control", placeholder: "検索条件名を入力" %>
            <% if @search_parameter_saves.errors.any? %>
              <div>
                <% @search_parameter_saves.errors.full_messages.each do |message| %>
                  <p class="text-danger"><%= message %></p>
                <% end %>
              </div>
            <% end %>
        </div>

        <div class="field mb-3">
          <%= f.label :area_ids, "対象地域", class: "form-label" %>
          <%= f.collection_select :area_id, Area.all, :id, :area_name, {selected: params[:area_ids], include_blank: "-- 地域を選択 --" }, class: "form-select" %>
        </div>

        <div class="field mb-3">
          <%= f.label :area_ids, "対象法人格", class: "form-label" %>
          <%= f.collection_select :target_id, Target.all, :id, :group_name, { selected: params[:target_ids], include_blank: "-- 対象種別を選択 --" }, class: "form-select" %>
        </div>

        <div class="field mb-3">
          <%= f.label :area_ids, "分野", class: "form-label" %>
          <%= f.collection_select :field_id, Field.all, :id, :field_name, {selected: params[:field_ids], include_blank: "-- 分野を選択 --"}, class: "form-select" %>
        </div>

        <div class="d-flex justify-content-center mt-5">
          <%= f.submit "検索条件を保存する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

