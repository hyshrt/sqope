<div class="container">
  <div class="row">
    <div class="col-4 mx-auto padding-top-80">
      <h3 class="border-bottom border-warning border-2 mb-5 pb-4 d-flex justify-content-center">マイページ</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">

      <div class="d-flex justify-content-center py-3">
        <div class="col d-flex justify-content-center">
          <div class="col-2 d-flex justify-content-center align-items-center">
            <i class="fas fa-user fa-3x"></i>
          </div>
          <div class="col-4 d-flex align-items-center justify-content-center">
              <label for="user-name">ユーザー情報の編集</label>
          </div>
        <div class="col-2 d-flex align-items-center justify-content-center">
          <%= link_to users_mypage_edit_path do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
        </div>
      </div>

      <hr>

      <div class="d-flex justify-content-center py-3">
        <div class="col d-flex justify-content-center">
          <div class="col-2 d-flex justify-content-center align-items-center">
            <i class="fas fa-lock fa-3x"></i>
          </div>
          <div class="col-4 d-flex align-items-center justify-content-center">
              <label for="use-name">パスワードの変更</label>
          </div>
        <div class="col-2 d-flex align-items-center justify-content-center">
          <%= link_to users_mypage_edit_password_path do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
        </div>
      </div>

      <hr>

       <div class="d-flex justify-content-center py-3">
        <div class="col d-flex justify-content-center">
          <div class="col-2 d-flex justify-content-center align-items-center">
            <i class="fas fa-sign-out-alt fa-3x"></i>
          </div>
          <div class="col-4 d-flex align-items-center justify-content-center">
              <label for="user-name">ログアウト</label>
          </div>
        <div class="col-2 d-flex align-items-center justify-content-center">
          <%= link_to destroy_user_session_path, method: :get do %>
            <i class="fas fa-chevron-right fa-2x"></i>
          <% end %>
        </div>
        </div>
      </div>

      <hr>

      <div class="d-flex justify-content-center">
        <%= link_to "アカウントを削除する", users_destroy_path, class: "btn btn-outline-danger mt-5", method: :delete, data: { confirm: '本当に削除しますか？'} %>
      </div>
    </div>
  </div>
</div>