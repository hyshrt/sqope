<div class="container">
  <div class="row">
    <div class="col-4 mx-auto padding-top-80">
      <h3 class="border-bottom border-warning border-2 mb-5 pb-4 d-flex justify-content-center">ユーザー情報編集</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
        <%= form_with url: users_mypage_path, local: true, method: :put do |f| %>
        <div class="form-group row mb-3">

          <%= f.label :lastname, "", class: "col-md-5 col-form-label text-md-left" do %>
            姓
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :lastname,
              class: "form-control #{"is-invalid" if @user.errors.messages[:lastname].present? }",
              autofocus: "true",
              value: @user.lastname,
              required: "",
              autocomplete: "name",
              placeholder: "佐藤"
            %>

            <% if @user.errors.messages[:lastname].present? %>
              <span class="text-danger">
                <strong><%= @user.errors.full_messages_for(:lastname).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :firstname, "", class: "col-md-5 col-form-label text-md-left" do %>
            名
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :firstname,
              class: "form-control #{"is-invalid" if @user.errors.messages[:firstname].present? } ",
              autofocus: "true",
              value: @user.firstname,
              required: "",
              autocomplete: "name",
              placeholder: "太郎"
            %>

            <% if @user.errors.messages[:firstname].present? %>
              <span class="text-danger">
                <strong><%= @user.errors.full_messages_for(:firstname).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :lastname_kana, "", class: "col-md-5 col-form-label text-md-left" do %>
            姓（ふりがな）
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :lastname_kana,
              class: "form-control #{"is-invalid" if @user.errors.messages[:lastname_kana].present? } ",
              autofocus: "true",
              value: @user.lastname_kana,
              required: "",
              autocomplete: "name",
              placeholder: "さとう"
            %>

            <% if @user.errors.messages[:lastname_kana].present? %>
              <span class="text-danger">
                <strong><%= @user.errors.full_messages_for(:lastname_kana).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :firstname_kana, "", class: "col-md-5 col-form-label text-md-left" do %>
            名（ふりがな）
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :firstname_kana,
              class: "form-control #{"is-invalid" if @user.errors.messages[:firstname_kana].present? } ",
              autofocus: "true",
              value: @user.firstname_kana,
              required: "",
              autocomplete: "name",
              placeholder: "たろう"
            %>

            <% if @user.errors.messages[:firstname_kana].present? %>
              <span class="text-danger">
                <strong><%= @user.errors.full_messages_for(:firstname_kana).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, "", class: "col-md-5 col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if @user.errors.messages[:email].present? } ",
              autofocus: "true",
              value: @user.email,
              required: "",
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if @user.errors.messages[:email].present? %>
              <span class="text-danger">
                <strong><%= @user.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>


        

      

        <div class="form-group d-flex justify-content-center">
          <button type="submit" class="btn btn-primary mt-3">
            ユーザー情報を更新する
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>