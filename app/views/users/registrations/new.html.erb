<div class="container">
  <div class="row">
    <div class="col-4 mx-auto padding-top-80">
      <h3 class="border-bottom border-warning border-2 mb-5 pb-4 d-flex justify-content-center">新規ユーザー登録</h3>
    </div>
  </div>
</div>


<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row mb-3">

          <%= f.label :lastname, "", class: "col-md-5 col-form-label text-md-left" do %>
            姓
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :lastname,
              class: "form-control #{"is-invalid" if resource.errors.messages[:lastname].present? }",
              autofocus: "true",
              required: "",
              autocomplete: "name",
              placeholder: "佐藤"
            %>

            <% if resource.errors.messages[:lastname].present? %>
              <span class="text-danger">
                <strong><%= resource.errors.full_messages_for(:lastname).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :firstname, "", class: "col-md-5 col-form-label text-md-left" do %>
            名
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :firstname,
              class: "form-control #{"is-invalid" if resource.errors.messages[:firstname].present? } ",
              autofocus: "true",
              required: "",
              autocomplete: "name",
              placeholder: "太郎"
            %>

            <% if resource.errors.messages[:firstname].present? %>
              <span class="text-danger">
                <strong><%= resource.errors.full_messages_for(:firstname).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :lastname_kana, "", class: "col-md-5 col-form-label text-md-left" do %>
            姓（ふりがな）
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :lastname_kana,
              class: "form-control #{"is-invalid" if resource.errors.messages[:lastname_kana].present? } ",
              autofocus: "true",
              required: "",
              autocomplete: "name",
              placeholder: "さとう"
            %>

            <% if resource.errors.messages[:lastname_kana].present? %>
              <span class="text-danger">
                <strong><%= resource.errors.full_messages_for(:lastname_kana).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :firstname_kana, "", class: "col-md-5 col-form-label text-md-left" do %>
            名（ふりがな）
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :firstname_kana,
              class: "form-control #{"is-invalid" if resource.errors.messages[:firstname_kana].present? } ",
              autofocus: "true",
              required: "",
              autocomplete: "name",
              placeholder: "たろう"
            %>

            <% if resource.errors.messages[:firstname_kana].present? %>
              <span class="text-danger">
                <strong><%= resource.errors.full_messages_for(:firstname_kana).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, "", class: "col-md-5 col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if resource.errors.messages[:email].present? } ",
              autofocus: "true",
              required: "",
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if resource.errors.messages[:email].present? %>
              <span class="text-danger">
                <strong><%= resource.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.password_field :password,
              class: "form-control #{ "is-invalid" if resource.errors.messages[:password].present? }",
              autofocus: "true"
            %>
            <% if resource.errors.messages[:password].present? %>
            <span class="text-danger">
              <strong><%= resource.errors.full_messages_for(:password).first %></strong>
            </span>
            <% end %>
            </div>
          </div>

        <div class="form-group row mb-3">
          <%= f.label :password_confirmation, "", class: "col-md-5 col-form-label text-md-left" do %>
          パスワード（確認用）
          <% end %>
          <div class="col-md-7">
            <%=
              f.password_field :password_confirmation,
              class: "form-control",
              autocomplete: "new-password"
            %>
          </div>
        </div>

        <div class="form-group d-flex justify-content-center">
          <button type="submit" class="btn btn-primary mt-3">
            ユーザー登録する
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

