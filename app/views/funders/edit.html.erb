<div class="container">
  <div class="row">
    <div class="col-4 mx-auto padding-top-80">
      <h3 class="border-bottom border-warning border-2 mb-5 pb-4 d-flex justify-content-center">団体情報編集</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5">
        <%= form_with url: funders_mypage_path, local: true, method: :put do |f| %>
        <div class="form-group row mb-3">

          <%= f.label :name, "", class: "col-md-5 col-form-label text-md-left" do %>
            団体名
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :name,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:name].present? }",
              autofocus: "true",
              value: @funder.name,
              required: "",
              autocomplete: "name",
              placeholder: "法人格も含めて入力してください"
            %>

            <% if @funder.errors.messages[:name].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:name).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :postal_code, "", class: "col-md-5 col-form-label text-md-left" do %>
            名
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :postal_code,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:postal_code].present? } ",
              autofocus: "true",
              value: @funder.postal_code,
              required: "",
              autocomplete: "postal_code",
              placeholder: "半角　ハイフンを含めてください"
            %>

            <% if @funder.errors.messages[:postal_code].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:postal_code).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :address, "", class: "col-md-5 col-form-label text-md-left" do %>
            所在地（番地まで）
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :address,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:address].present? } ",
              autofocus: "true",
              value: @funder.address,
              required: "",
              autocomplete: "address",
              placeholder: "例：大阪府大阪市中央区1-1"
            %>

            <% if @funder.errors.messages[:address].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:address).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :address_building, "", class: "col-md-5 col-form-label text-md-left" do %>
            所在地（ビル・号室）
            <span class="ml-1">
              <span class="text-danger"></span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :address_building,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:address_building].present? } ",
              autofocus: "true",
              value: @funder.address_building,
              required: "",
              autocomplete: "address_building",
              placeholder: "例：ABCビル8F"
            %>

            <% if @funder.errors.messages[:address_building].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:address_building).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :tel, "", class: "col-md-5 col-form-label text-md-left" do %>
            電話番号
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :tel,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:tel].present? } ",
              autofocus: "true",
              value: @funder.tel,
              required: "",
              autocomplete: "tel",
              placeholder: "半角　ハイフンを含めてください"
            %>

            <% if @funder.errors.messages[:tel].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:tel).first %></strong>
              </span>
            <% end %>
          </div>
        </div>


        <div class="form-group row mb-3">

          <%= f.label :url, "", class: "col-md-5 col-form-label text-md-left" do %>
            団体ホームページURL
            <span class="ml-1">
              <span class="text-danger"></span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :url,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:url].present? } ",
              autofocus: "true",
              value: @funder.url,
              required: "",
              autocomplete: "url",
              placeholder: ""
            %>

            <% if @funder.errors.messages[:address_building].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:address_building).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">

          <%= f.label :representative, "", class: "col-md-5 col-form-label text-md-left" do %>
            代表者名
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.text_field :representative,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:representative].present? } ",
              autofocus: "true",
              value: @funder.representative,
              required: "",
              autocomplete: "representative",
              placeholder: "役職名を含めて入力"
            %>

            <% if @funder.errors.messages[:representative].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:representative).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, "", class: "col-md-5 col-form-label text-md-left" do %>
          メールアドレス
            <span class="ml-1">
              <span class="text-danger"> *必須</span>
            </span>
          <% end %>

          <div class="col-md-7">
            <%=
              f.email_field :email,
              class: "form-control #{"is-invalid" if @funder.errors.messages[:email].present? } ",
              autofocus: "true",
              value: @funder.email,
              required: "",
              autocomplete: "email",
              placeholder: "メールアドレス"
            %>

            <% if @funder.errors.messages[:email].present? %>
              <span class="text-danger">
                <strong><%= @funder.errors.full_messages_for(:email).first %></strong>
              </span>
            <% end %>
          </div>
        </div>

        <div class="form-group row mb-5">
          <%= f.label :logo, "団体ロゴ", class: "col-md-5 col-form-label text-md-left" %>
          <% if @funder.logo.present? %>
            <%= image_tag @funder.logo.url, size: "150x100" %>
          <% else %>
            <p class="text-danger">ロゴ未添付です</p>
          <% end %>
          <%= f.file_field :logo, class: "form-control" %>
        </div>

        <div class="form-group d-flex justify-content-center">
          <button type="submit" class="btn btn-primary mb-4">
            団体情報を更新する
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>