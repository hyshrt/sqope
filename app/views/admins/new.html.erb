<div class="container">
  <div class="row">
    <div class="col-4 mx-auto padding-top-80">
      <h3 class="border-bottom border-warning border-2 mb-5 pb-4 d-flex justify-content-center">管理者ログイン</h3>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-4 mx-auto">

      <%= form_with url: admins_login_path, local: true, method: :post do |f| %>
        <div class="form-group mb-3">
          <%=
            f.text_field :admin_name,
            class: "form-control #{"is-invalid" if alert }",
            autofocus: "true",
            required: "required",
            autocomplete: "admin_name",
            placeholder: "ログインユーザー名"
          %>
        </div>

        <div class="form-group mb-3">
          <%=
            f.password_field :password,
            class: "form-control #{"is-invalid" if alert } ",
            autofocus: "true",
            autocomplete: "password_digest",
            placeholder: "パスワード"
          %>     
        </div>

        <div class="form-group">
          <%=  f.submit "ログイン", class: "mt-3 btn btn-dark w-100" %>
        </div>
    
      <% end %>

    </div>
  </div>
</div>

